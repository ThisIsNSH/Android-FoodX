<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"

    tools:context="com.foodx.nsh.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"

            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps"
                android:text="FOOD"
                android:textColor="#fff"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psb"
                android:text="X"
                android:textColor="#fff"
                android:textSize="25sp" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#f3f3f3"
                    android:id="@+id/item1"

                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:id="@+id/image1"
                        android:src="@color/colorAccent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dal Kachori"
                        android:fontFamily="@font/psb"
                        android:textSize="25sp"
                        android:id="@+id/name1"
                        android:layout_toRightOf="@id/image1"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: 20"
                        android:fontFamily="@font/ps"
                        android:textSize="20sp"
                        android:id="@+id/price1"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@id/image1"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spice: Medium"
                        android:fontFamily="@font/psi"
                        android:textSize="15sp"
                        android:textAllCaps="true"
                        android:padding="4dp"
                        android:background="@drawable/spice_mid"
                        android:id="@+id/spice1"
                        android:layout_below="@id/price1"
                        android:layout_toRightOf="@id/image1"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black"/>



                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>
