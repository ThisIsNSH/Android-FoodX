                <com.tzanou.PercentVisibleLayout.PercentVisibleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:id="@+id/custom_layout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/psbi"
                        android:layout_marginLeft="64dp"
                        android:layout_marginRight="64dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/quote1"
android:textAlignment="center"
                        android:visibility="gone"
                        android:text="Quote of the Week:"
                        android:textColor="#fff"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/psi"
android:layout_marginLeft="64dp"
                        android:layout_marginRight="64dp"
android:textAlignment="center"
                        android:layout_below="@id/quote1"
                        android:id="@+id/quote2"
                        android:layout_marginTop="16dp"
                        android:visibility="visible"
                        android:text="Swipe right to add\nand left to remove !!"
                        android:textColor="#fff"
                        android:textSize="20sp" />



                </com.tzanou.PercentVisibleLayout.PercentVisibleLayout>

                <com.tzanou.PercentVisibleLayout.PercentVisibleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:id="@+id/custom_layout1">
                <RelativeLayout
                    android:id="@+id/item1"
                    android:elevation="4dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#f3f3f3">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="16dp"
                        android:src="@color/colorAccent" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:text="0"
                        android:paddingTop="16dp"
                        android:id="@+id/quantity1"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"

                        android:fontFamily="@font/psb"
                        android:textColor="#fff"
                        android:textSize="55sp"
                        android:background="@drawable/quantity_shape"
                        android:visibility="invisible"
                        android:layout_marginLeft="16dp"/>

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"


                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/image1"
                        android:fontFamily="@font/psb"
                        android:text="Dal Kachori"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@id/image1"
                        android:fontFamily="@font/ps"
                        android:gravity="center_vertical"
                        android:text="Price: 20"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/spice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/image1"
                        android:background="@drawable/spice_mid"
                        android:fontFamily="@font/psi"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text="Little Spicy"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />



                </RelativeLayout>
                </com.tzanou.PercentVisibleLayout.PercentVisibleLayout>

