<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fudo_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/psb"
        android:text="FUDO"
        android:textColor="@color/color0"
        android:textSize="80dp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fudo_main"
        android:layout_margin="8dp"
        android:hint="Enter Mobile Number"
        android:textColorHint="@color/color0"
        android:padding="16dp"
        android:background="@drawable/black_corner"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:layout_centerHorizontal="true"
        android:onClick="onLoginBtnClick"
        android:text="Login"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/psb"
        android:textColor="@color/color0"
        android:background="@drawable/black_corner"
        android:textSize="32dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:translationY="100dp"></ImageView>

    </LinearLayout>
</RelativeLayout>
