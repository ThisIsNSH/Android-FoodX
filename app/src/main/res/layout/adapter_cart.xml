<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:id="@+id/card"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:text="Remove"
            android:padding="2dp"
            android:id="@+id/remove"
            android:paddingLeft="8dp"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_alignParentLeft="true"
            android:textSize="0sp"
            android:layout_toLeftOf="@id/price"
            android:fontFamily="@font/psb"
            android:textColor="@color/black"
            android:id="@+id/hotelid" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/f"
            android:text="HI"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/psb"
            android:id="@+id/item_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:fontFamily="@font/psb"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_below="@id/item_name"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/f"
            android:layout_centerVertical="true"
            android:layout_below="@id/remove"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/curvedback2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:text="-"
                android:textColor="@color/white"
                android:id="@+id/subtraction1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/ps"
                android:id="@+id/Quantity"/>
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/curvedback2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="+"
                android:id="@+id/addition1"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>