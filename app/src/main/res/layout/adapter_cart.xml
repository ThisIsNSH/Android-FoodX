<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    android:id="@+id/card"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_alignParentLeft="true"
            android:textSize="0sp"
            android:layout_toLeftOf="@id/price"
            android:fontFamily="@font/psb"
            android:textColor="@color/black"
            android:id="@+id/hotelid" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/f"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HI"
                android:paddingRight="16dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/psb"
                android:id="@+id/item_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="a"
                android:fontFamily="@font/psb"
                android:textColor="@color/black"
                android:layout_below="@id/item_name"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/f"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:background="@drawable/curvedback2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:padding="10dp"
                android:id="@+id/subtraction1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/ps"
                android:id="@+id/Quantity"/>

            <ImageView
                android:background="@drawable/curvedback2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add"
                android:padding="10dp"
                android:layout_marginRight="16dp"
                android:id="@+id/addition1"/>

            <ImageView
                android:background="@drawable/curvedback_red"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cross"
                android:padding="10dp"
                android:id="@+id/remove"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>